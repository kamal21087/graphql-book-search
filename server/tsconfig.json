{
  "compilerOptions": {
    "module": "ESNext",                  // Use ES Modules for Node.js compatibility
    "moduleResolution": "Node",         // Resolve modules in Node.js style
    "target": "ES2020",                 // Allow modern JavaScript features
    "rootDir": "src",                   // Root directory for source files
    "outDir": "dist",                   // Directory for compiled files
    "allowJs": true,                    // Allow JavaScript files in the project
    "esModuleInterop": true,            // Enable compatibility between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true, // Enforce consistent import casing
    "strict": true,                     // Enable all strict type-checking options
    "skipLibCheck": true,               // Skip type checking for libraries
    "resolveJsonModule": true,          // Allow importing JSON files
    "incremental": true                 // Enable incremental builds
  },
  "include": ["src"],                   // Include all files in the src folder
  "exclude": ["node_modules", "dist"]  // Exclude these folders from compilation
}
